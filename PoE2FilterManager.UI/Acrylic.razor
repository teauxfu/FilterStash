<div class="acrylic" style=@_style>
    @ChildContent
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public int BlurPixels { get; set; } = 3;
    [Parameter] public int SaturationPercent { get; set; } = 150;
    [Parameter] public string BorderRadius { get; set; } = "0.5rem";
    //"rgba(0,0,0,.3)"
    [Parameter] public string BoxShadowRgba { get; set; } = "rgba(0,0,0,0)";
    [Parameter] public string BackgroundRgba { get; set; } = "rgba(255,255,255,.6)";

    string _backdropFilter => $"blur({BlurPixels}px) saturate({SaturationPercent}%)";
    string _style => $"display:inline-block; box-shadow: 0 1rem 2rem {BoxShadowRgba}; border-radius: {BorderRadius}; -webkit-backdrop-filter: {_backdropFilter}; backdrop-filter: {_backdropFilter}; background-color: {BackgroundRgba};";
}